    "devops": {
      "enabled": false
    },
    "testing": {
      "enabled": false
    },
    "documentation": {
      "enabled": false
    }
  },

  "routing": {
    "multi-agent-threshold": 3,
    "auto-handoff": true,
    "fallback-agent": "orchestrator"
  }
